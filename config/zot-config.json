{
  "storage": {
    "rootDirectory": "/var/lib/zot",
    "gc": true,
    "gcDelay": "1h",
    "gcInterval": "24h"
  },
  "http": {
    "address": "0.0.0.0",
    "port": "5000",
    "readTimeout": "1800s",
    "writeTimeout": "1800s",
    "idleTimeout": "300s"
  },
  "log": {
    "level": "info"
  },
  "extensions": {
    "sync": {
      "enable": true,
      "registries": [
        {
          "urls": ["https://registry-1.docker.io"],
          "onDemand": true,
          "maxRetries": 3,
          "retryDelay": "5m"
        },
        {
          "urls": ["https://gcr.io"],
          "onDemand": true,
          "maxRetries": 3,
          "retryDelay": "5m"
        },
        {
          "urls": ["https://k8s.gcr.io"],
          "onDemand": true,
          "maxRetries": 3,
          "retryDelay": "5m"
        },
        {
          "urls": ["https://registry.k8s.io"],
          "onDemand": true,
          "maxRetries": 3,
          "retryDelay": "5m"
        },
        {
          "urls": ["https://quay.io"],
          "onDemand": true,
          "maxRetries": 3,
          "retryDelay": "5m"
        },
        {
          "urls": ["https://ghcr.io"],
          "onDemand": true,
          "maxRetries": 3,
          "retryDelay": "5m"
        },
        {
          "urls": ["https://mcr.microsoft.com"],
          "onDemand": true,
          "maxRetries": 3,
          "retryDelay": "5m"
        },
        {
          "urls": ["https://nvcr.io"],
          "onDemand": true,
          "maxRetries": 3,
          "retryDelay": "5m"
        },
        {
          "urls": ["https://docker.elastic.co"],
          "onDemand": true,
          "maxRetries": 3,
          "retryDelay": "5m"
        },
        {
          "urls": ["https://registry.gitlab.com"],
          "onDemand": true,
          "maxRetries": 3,
          "retryDelay": "5m"
        }
      ]
    }
  }
}

